---
import { getCollection } from "astro:content";
const sponsors = await getCollection("sponsors");
---


<section class="sponsors section container">

    <h2 class="section__title sponsors__title">Patrocinadores</h2>
    <p class="sponsors__subtitle">Este proyecto puede llevarse a cabo gracias a la colaboración de…</p>


    <div class="sponsors__content">
    {
        sponsors.map((sponsor) => {
            const { data } = sponsor;
            return (
                <div class="sponsors__content-box">
                    <a class="sponsors__content-link" href={data.url} target="_blank">
                        <img class="sponsors__content-img" src={data.logo} alt={data.name} />
                    </a>
                </div>
            );
        })
    }
    </div>

</section>

<style>
    .sponsors__title,
    .sponsors__subtitle{
        text-align: center
    }
    .sponsors__content {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        max-width: 1000px;
        justify-content: center;
        margin: 2rem auto;
    }
    .sponsors__content-box{
        max-width: 200px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        filter: grayscale(100%);
        transition: all 0.3s ease;
    }

    .sponsors__content-box:hover {
        transform: scale(1.1);
        filter: grayscale(0%);
    }
    .sponsors__content-img{
        width: 100%;
        height: auto;
        aspect-ratio: 16/9;
        object-fit: contain;
    }
    @media (min-width: 464px) {
        .sponsors__content {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (min-width: 768px) {
        .sponsors__content {
            grid-template-columns: repeat(5, 1fr);
        }
    }
</style>